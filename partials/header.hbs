<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />

{{!-- The big featured header --}}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
            <h2 class="page-description">{{@blog.description}}</h2>

            <div class="social">
                <a href="{{@blog.url}}/about/" title="About me">
              <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i style="color: #ffd21e;" class="fa fa-info fa-stack-1x fa-inverse"></i>
              </span>
                </a>

                <a href="https://stackoverflow.com/users/3866610/piotr-dawidiuk?tab=profile" title="StackOverflow">
              <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-stack-overflow fa-stack-1x fa-inverse"></i>
              </span>
                </a>

                <a href="https://github.com/pdaw" title="GitHub">
                <span class="fa-stack">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                </span>
                </a>

                {{#if @blog.facebook }}
                    <a href="{{facebook_url @blog.facebook}}" title="Facebook">
              <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
              </span>
                    </a>
                {{/if}}

                {{!--
                  <a href="https://linkedin.com/in/<username>" title="LinkedIn">
                    <span class="fa-stack">
                      <i class="fa fa-circle fa-stack-2x"></i>
                      <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                    </span>
                  </a>
                --}}

                <a href="{{@blog.url}}/rss/" title="RSS">
              <span class="fa-stack">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i class="fa fa-rss fa-stack-1x fa-inverse"></i>
              </span>
                </a>

                <a href="mailto:piotr.dawidiuk@gmail.com" title="Email me">
                <span class="fa-stack">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                </span>
                </a>
            </div>
        </div>
    </div>
</header>